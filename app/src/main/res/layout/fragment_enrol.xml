<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@android:color/white"
    tools:context=".Fragment.EnrolFragment">

<!--<ScrollView-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"-->
<!--    app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
<!--    android:orientation="vertical">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_profile"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/user"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_selectprofile"
            android:layout_below="@+id/img_profile"
            android:text="@string/txt_selectprofile"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:textColor="@color/colordarkblue"
            android:textSize="15dp"/>


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/edFirstname"
        android:layout_below="@+id/txt_selectprofile"
        android:layout_margin="20dp"
        android:background="@drawable/edittext_background"
        android:hint="First Name"
        android:textColorHint="@android:color/darker_gray"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edLastname"
            android:layout_below="@+id/edFirstname"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Last Name"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edBirthdate"
            android:layout_below="@+id/edLastname"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Date of Birth"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edGender"
            android:layout_below="@+id/edBirthdate"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Gender"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edCountry"
            android:layout_below="@+id/edGender"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Country"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edState"
            android:layout_below="@+id/edCountry"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="State"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edHome"
            android:layout_below="@+id/edState"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Home Town"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edPhone"
            android:layout_below="@+id/edHome"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Phone Number"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/edTelephone"
            android:layout_below="@+id/edPhone"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Telephone Number"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:layout_gravity="start"
            android:layout_centerHorizontal="true"
            android:padding="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdduser"
            android:layout_below="@+id/edTelephone"
            android:textSize="15dp"
            android:text="@string/txt_adduser"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/btn_shape"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorwhite"
            ></androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>
